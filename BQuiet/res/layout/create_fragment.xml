<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"        
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"                
        android:fillViewport="true" >
        
<RelativeLayout           
    android:id="@+id/createLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">    
    
    <LinearLayout    
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="10dp" 
    	android:orientation="vertical"
    	android:id="@+id/eventDetails">
        
        <EditText
        	android:id="@+id/eventName"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:hint="Event name"
        	android:inputType="textVisiblePassword"
        	android:singleLine="true"      
        	android:background="@drawable/borderlines"  	
        	android:padding="10dp"
        	android:maxLength="20"
        	android:privateImeOptions="nm"	        	
        	tools:ignore="HardcodedText">
            </EditText>
        
    </LinearLayout>
    
    <LinearLayout    
        android:layout_below="@+id/eventDetails"    
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="10dp" 
    	android:orientation="vertical"
    	android:id="@+id/timeToStart">
        
        <TextView            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to start"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="HardcodedText,DuplicateIds" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:padding="10dp"
            android:layout_gravity="center">

            <EditText android:privateImeOptions="nm"
                android:id="@+id/Hour"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borderlines"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="HH"
                android:padding="10dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hours"
                tools:ignore="HardcodedText" 
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>

            <EditText android:privateImeOptions="nm"
                android:id="@+id/Minute"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borderlines"
                android:focusable="false"
                android:hint="MM"
                android:padding="10dp"
                tools:ignore="HardcodedText" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="minutes"
                tools:ignore="HardcodedText" 
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>

            <EditText android:privateImeOptions="nm"
                android:id="@+id/AMPM"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borderlines"
                android:focusable="false"
                android:hint="TT"
                android:padding="10dp"
                tools:ignore="HardcodedText" />
            
        </LinearLayout>       
                
    </LinearLayout>
    
    <LinearLayout    
        android:layout_below="@+id/timeToStart"    
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="10dp" 
    	android:orientation="vertical"
    	android:id="@+id/durationDetails">
        
        <TextView            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to end"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="HardcodedText,DuplicateIds" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:padding="10dp"
            android:layout_gravity="center">

            <EditText android:privateImeOptions="nm"
                android:id="@+id/finishHour"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borderlines"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="HH"
                android:padding="10dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hours"
                tools:ignore="HardcodedText" 
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>

            <EditText android:privateImeOptions="nm"
                android:id="@+id/finishMinute"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borderlines"
                android:focusable="false"
                android:hint="MM"
                android:padding="10dp"
                tools:ignore="HardcodedText" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="minutes"
                tools:ignore="HardcodedText" 
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>

            <EditText android:privateImeOptions="nm"
                android:id="@+id/finishAMPM"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borderlines"
                android:focusable="false"
                android:hint="TT"
                android:padding="10dp"
                tools:ignore="HardcodedText" />
            
        </LinearLayout>         
        
    </LinearLayout>    
    
    <LinearLayout    
        android:layout_below="@+id/durationDetails"    
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="10dp" 
    	android:orientation="vertical"
    	android:id="@+id/activateSMS">
        
        <RelativeLayout 
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content" >
    	
    		<TextView    		    
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_alignParentLeft="true"
    		    android:text="Send SMS"
    		    android:textAppearance="?android:attr/textAppearanceLarge"
    		    tools:ignore="HardcodedText,DuplicateIds" />
    	
    		<Switch
            	android:id="@+id/smsOnOffSwitch"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"  
            	android:textOn="Yes"
            	android:textOff="No"          
            	android:layout_alignParentRight="true" />            
    
    	</RelativeLayout>
        
        <EditText android:privateImeOptions="nm"
            android:id="@+id/smsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SMS text"
            android:focusable="false"
            android:background="@drawable/borderlines"  	
        	android:padding="10dp"
            tools:ignore="HardcodedText,DuplicateIds" />
        
    </LinearLayout>    
    
    <LinearLayout    
        android:layout_below="@+id/activateSMS"    
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="10dp" 
    	android:orientation="horizontal"
    	android:id="@+id/repeatEvents">
        
    	
    	<TextView    		    
    	    android:layout_width="0dip"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:text="Repeat"
    	    android:textAppearance="?android:attr/textAppearanceLarge"
    	    tools:ignore="HardcodedText,DuplicateIds" />
    	
    	<Switch
    	    android:id="@+id/eventRepeatSwitch"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:textOn="Yes"
            android:textOff="No"
    	    tools:ignore="DuplicateIds" />
                
    </LinearLayout>
    
    <Button
        android:id="@+id/doneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Okay"
        tools:ignore="HardcodedText"
        android:padding="10dp"        
        android:layout_below="@+id/repeatEvents"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
</ScrollView>